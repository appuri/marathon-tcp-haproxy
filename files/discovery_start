#!/bin/bash

set -e

run_command() {
  echo "Running $1"
  bash -c "$1" 2>&1 &
  HAPROXY_PID="$!"
}

reload_conf() {
  MARATHON_AVAILABLE=1
  haproxy_dns_cfg $DISCOVERY_URL > $HAPROXY_CONF || MARATHON_AVAILABLE=0
  if [ $MARATHON_AVAILABLE -ne 1 ]; then
      echo "Marathon is not available"
      return
  fi

  echo "Reloading conf"
  run_command "haproxy -f $HAPROXY_CONF -sf $HAPROXY_PID"
}

onexit() {
  echo Sending SIGTERM to haproxy
  kill $HAPROXY_PID &>/dev/null
  sleep 1
}
trap onexit SIGINT SIGTERM EXIT

run_command "haproxy -f $HAPROXY_CONF"
while true; do reload_conf; sleep $RELOAD_TTL; done
